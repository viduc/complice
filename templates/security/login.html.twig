{% extends 'layout/complice.html.twig' %}

{% block title %}{% trans %}securite.titres.login{% endtrans %}{% endblock %}

{% block contenu %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


    <div class="container">
    <div class="bs-docs-section">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-header">
                    <h1 class="h3 mb-3 font-weight-normal">{% trans %}securite.titres.login{% endtrans %}</h1>
                </div>
            </div>
        </div>

        {% if app.user %}
        <div class="row">
            <div class="col-lg-12">
                <div class="mb-3">
                    {% trans %}securite.login.message{% endtrans %} : {{ app.user.username }},
                    <a href="{{ path('app_logout') }}">{% trans %}securite.login.logout{% endtrans %}</a>
                </div>
            </div>
        </div>
        {% else %}
        <div class="row">
            <div class="col-lg-5">
                <div class="bs-component">
                    <div class="form-group">
                        <label class="col-form-label" for="inputUsername">
                            {% trans %}securite.login.username{% endtrans %}
                        </label>
                        <div class="row">
                            <input type="text" value="{{ last_username }}"
                                   name="username" id="inputUsername"
                                   class="form-control" required autofocus>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-2"></div>
            <div class="col-lg-5">
                <div class="bs-component">
                    <div class="form-group">
                        <label class="col-form-label" for="inputPassword">
                            {% trans %}securite.login.password{% endtrans %}
                        </label>
                        <div class="row">
                            <input type="password" name="password"
                                   id="inputPassword" class="form-control"
                                   required>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="bs-component">
                    <div class="form-group">
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                        <button class="btn btn-lg btn-primary" type="submit">
                            {% trans %}securite.login.connexion{% endtrans %}
                        </button>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
    </div>
</form>
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

{% endblock %}
