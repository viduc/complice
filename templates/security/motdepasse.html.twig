{% extends 'layout/complice.html.twig' %}

{% block title %}{% trans %}securite.titres.login{% endtrans %}{% endblock %}

{% block body %}
    {% if error is defined %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container">
    <div class="bs-docs-section">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-header">
                    <h1 class="h3 mb-3 font-weight-normal">
                        {% trans %}securite.titres.motdepasse{% endtrans %}
                    </h1>
                </div>
            </div>
        </div>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-lg-5">
                <div class="bs-component">
                    <div class="form-group">
                        <div class="row">
                            {{ form_widget(form.password) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-2"></div>

        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="bs-component">
                    <div class="form-group">
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
    </div>

{% endblock %}
