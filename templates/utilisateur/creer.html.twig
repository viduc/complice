{% extends 'layout/complice.html.twig' %}

{% block contenu %}
    <link rel="stylesheet" href="css/bootstrap-multiselect.css" type="text/css">

    {{ form_start(form) }}
    <div class="row">
        <div class="col-lg-12" id="user_create">
            <div class="bs-component">
                <div class="form-row align-items-center" >
                    <div class="form-group col-lg-1">
                        <label class="col-form-label" for="user_civilite">
                            {% trans %}utilisateur.edit.civilite{% endtrans %}
                        </label>
                        {{ form_widget(form.civilite) }}
                    </div>
                    <div class="form-group col-lg-2">
                        <label class="col-form-label" for="user_nom">
                            {% trans %}utilisateur.edit.nom{% endtrans %}
                        </label>
                        {{ form_widget(form.nom) }}
                    </div>
                    <div class="form-group col-lg-2">
                        <label class="col-form-label" for="user_prenom">
                            {% trans %}utilisateur.edit.prenom{% endtrans %}
                        </label>
                        {{ form_widget(form.prenom) }}
                    </div>
                </div>
                <div class="form-row align-items-center" >
                    <div class="form-group col-lg-3">
                        <label class="col-form-label" for="user_email">
                            {% trans %}utilisateur.edit.email{% endtrans %}
                        </label>
                        {{ form_widget(form.email) }}
                    </div>
                    <div class="form-group col-lg-2">
                        <label class="col-form-label" for="user_roles">
                            {% trans %}utilisateur.edit.roles{% endtrans %}
                        </label>
                        {{ form_widget(form.roles) }}
                    </div>
                </div>
                <div class="form-row align-items-center" >
                    <div class="form-group col-lg-1">
                        {{ form_widget(form.save) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}




